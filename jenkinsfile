
pipeline {
    agent any

    stages {
        stage('create image') {
            steps {
                sh 'docker build -t app .'
                echo 'docker installed'
            }
        }
        stage('dokcer conatainer run') {
            steps {
                sh 'docker run -dt --name app -p 300:80 app'
                echo 'conatainer run'
            }
        }
    }
}
