
pipeline {
    agent any

    stages {
        stage('app') {
            steps {
                sh 'docker build -t app .'
                echo 'build completed'
            }
        }
        stage('docker conatainer run')
            steps {
                sh 'docker run -d --name app -p 300:80 app'
                echo 'created conatiner'
            }
        }
    }
}
